<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CaldroidGrandPrix" parent="CaldroidDefault">
        <item name="styleCaldroidMonthName">@style/CaldroidDefaultGrandPrixMonthName</item>
        <item name="styleCaldroidWeekdayView">@style/CaldroidDefaultGrandPrixWeekdayView</item>
        <item name="styleCaldroidLeftArrow">@style/CaldroidDefaultGrandPrixLeftArrow</item>
        <item name="styleCaldroidRightArrow">@style/CaldroidDefaultGrandPrixRightArrow</item>
    </style>

    <style name="CaldroidDefaultGrandPrixCalendarViewLayout">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CaldroidDefaultGrandPrixMonthName" parent="CaldroidDefaultMonthName">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="CaldroidDefaultGrandPrixGridView" parent="CaldroidDefaultGridView" />

    <style name="CaldroidDefaultGrandPrixCell" parent="CaldroidDefaultCell">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="CaldroidDefaultGrandPrixNormalCell" parent="CaldroidDefaultGrandPrixCell">
        <item name="android:padding">5dp</item>
    </style>

    <style name="CaldroidDefaultGrandPrixSquareCell" parent="CaldroidDefaultGrandPrixCell" />

    <style name="CaldroidDefaultGrandPrixWeekdayView">
        <item name="android:textColor">@color/colorPrimaryPurple</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="CaldroidDefaultGrandPrixLeftArrow" parent="CaldroidDefaultArrowButton">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@drawable/left_arraow_bitmap</item>
    </style>

    <style name="CaldroidDefaultGrandPrixRightArrow" parent="CaldroidDefaultArrowButton">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/right_arrow_bitmap</item>
    </style>

</resources>