<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kz.grandprixclub.grandprixclubapp.Fragments.FragmentDetox">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_shares_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="kz.grandprixclub.grandprixclubapp.SharesDetailActivity">

        <ImageView
            android:id="@+id/image_share"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_title_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_share"
            android:layout_margin="12dp"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_announce_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title_share"
            android:layout_margin="12dp"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <WebView
            android:id="@+id/wv_content_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_announce_share"
            android:layout_margin="12dp" />

    </RelativeLayout>

</ScrollView>
