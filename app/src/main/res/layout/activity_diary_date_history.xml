<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/tv_diary_title_history"
        android:layout_width="match_parent"
        android:layout_margin="12dp"
        android:paddingBottom="12dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryPurple"
        android:textSize="14sp"
        android:gravity="center_horizontal"
        android:background="@drawable/row_shape"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:gravity="center_horizontal|center"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/image_button_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"/>
        <TextView
            android:id="@+id/tv_exercise_nav"
            android:layout_width="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"

            android:textAlignment="center"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/image_button_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_diary_date_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants" >
    </ListView>

    <TextView
        android:id="@+id/lv_diary_date_history_empty"
        android:layout_marginTop="26dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Нет данных">

    </TextView>
</LinearLayout>
